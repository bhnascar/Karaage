<% @title = "[カラアゲ] Karaage Log in" %>

<div class="container">
  <h1>Log in</h1>
  <%= form_for :user, method: :post, url: {action: :post_login}, html: {class: "form-horizontal", role: "form"} do |f| %>
    <div class="form-group">
      <label for="inputUserEmail" class="col-sm-3 control-label">E-mail</label>
      <div class="col-sm-6">
        <%= f.text_field :user_email, class: "form-control", id: "inputUserEmail", placeholder: "karaage@stanford.edu" %>
      </div>
    </div>
    <div class="form-group">
      <label for="inputUserPassword" class="col-sm-3 control-label">Password</label>
      <div class="col-sm-6">
        <%= f.password_field :user_password, class: "form-control", id: "inputUserPassword", placeholder: "Password" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9">
        <%= submit_tag "Submit", class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>