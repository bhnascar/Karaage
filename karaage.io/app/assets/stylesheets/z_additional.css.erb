body {
	font-family: "Open Sans", "Helvetica Neue", Helvetica, Sans-Serif;
	padding-top: 50px;
}
.jumbotron.cover-photo {
	background-image: url(<%= asset_data_uri 'cover/cover.jpg' %>);
	background-size: cover;
	padding-top: 100px;
	padding-bottom: 350px;
	padding-left: 0px;
	padding-right: 0px;
	background-position: center;
}
.jumbotron.jumbotron-text-background {
	padding-top:0px;
	padding-bottom: 0px;
	padding-left: 0px;
	padding-right: 0px;
	background-position: center;
}
.jumbotron-text {
	height: 100%;
	padding-left: 60px;
	padding-right: 60px;
	padding-top: 350px;
	padding-bottom: 60px;
	background-color: rgba(0,0,0,0.4);
	color:#fff;
}
.jumbotron-text h1 {
	font-size: 36px;
}
.jumbotron-text .lead {
	font-size: 16px;
}
.jumbotron-text-background.jumbotron-about-background {
	background-image: url(<%= asset_data_uri 'cover/about_background.jpg' %>);
}
.dark-container {
	margin-left: 0;
	margin-right: 0;
	padding-left: 60px;
	padding-right: 60px;
	width: 100%;
	background-color: rgba(0,0,0,0.3);
	color: #fff;
	padding-top: 10px;
	padding-bottom: 10px;
}
.media-thumb {
	width: 128px;
	height: 128px;
}
.img-80 {
	max-width: 40%;
	margin: auto;
}
.navbar-translucent {
	background-color: rgba(55,55,55,0.9);
	transition-duration: 1s;
}
.navbar-translucent .navbar-nav > li > a {
  color: #bbb;
}
h1,
h2 {
	font-weight: 200;
}
h3,
h4,
h5,
h6 {
	font-weight: 300;
}
.navbar-brand {
	color: #fff !important;
}
@media (min-width: 1600px) {
  .container {
    width: 1570px;
  }
}
@media (min-width: 1200px) {
  .jumbotron.jumbotron-about-background {
  	padding-left: 40%;
  }
}
@media (min-width: 768px) {
  .jumbotron-text .lead {
    font-size: 21px;
  }
}